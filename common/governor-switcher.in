#!/bin/sh

VERS="@VERSION@"

case $1 in
  o)
    GOV=ondemand ;;
  p)
    GOV=performance ;;
  *)
    exit 0 ;;
esac

if [ -f /sys/devices/system/cpu/cpufreq/policy0/scaling_governor ]; then
  echo "$GOV" > /sys/devices/system/cpu/cpufreq/policy0/scaling_governor
else
  echo "CPU scaling is not supported on this hardware"
  exit 1
fi

